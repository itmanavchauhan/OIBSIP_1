<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CelciusToKelvin"
    android:background="@drawable/bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Celcius To Kelvin"
        android:textSize="25dp"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/kelvintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text=""
        android:hint="Enter Celcius"
        android:textColorHint="@color/white"
        android:layout_marginTop="75dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/kelvin_converter"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Covert TO kelvin"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/kelvin_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:textSize="15dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/pound"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/pound"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/gram"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/kg"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/meter"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/meter"
            android:layout_margin="10dp"/>
    </LinearLayout>
</LinearLayout>

